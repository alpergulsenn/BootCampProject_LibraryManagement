@model LibraryManagement.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1 class="mt-1">Details</h1>

<div class="card">
    <div class="row g-0">
          <!-- left side of this page -->        
        <div class="col-md-8"> 
            <div class="card-body">
                <h4 class="card-title">@Model.Title</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Author)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Author)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PublicationYear)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.PublicationYear)</dd>

                    <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Category)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Category)</dd>
                </dl>
            </div>
        </div>  <!-- right side of this page-->
        <div class="col-md-4 text-center p-3">
                <img src="@Model.ImagePath" class="img-fluid rounded" 
                    alt="@Model.Title Cover" 
                    onerror="this.src='/images/default-book.png';" 
                    style="max-height: 300px;" />
        </div>
        <div class="mt-3">
        <a class="pixel-button ms-3 mb-4"  asp-action="Edit" asp-route-id="@Model?.ID" class="btn btn-warning">Edit</a>
        <a class="pixel-button ms-3 mb-4" style ="background-color:#43b2d3;"  asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>



